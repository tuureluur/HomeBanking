<Window x:Class="HomeBanking.ImportData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBanking"
        xmlns:properties="clr-namespace:HomeBanking.Properties"
        mc:Ignorable="d"
        Title="ImportData" Height="300" Width="300">
    <Grid>
        <Button x:Name="btnImportData" Content="Import" HorizontalAlignment="Left" Margin="207,239,0,0" VerticalAlignment="Top" Width="75" Click="btnImportData_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="20" Margin="10,239,0,0" VerticalAlignment="Top" Width="90" Click="btnCancel_Click"/>
        <TextBox x:Name="tbSourcePath" HorizontalAlignment="Left" Height="23" Margin="10,56,0,0" TextWrapping="Wrap" Text="{Binding Source={x:Static properties:Settings.Default}, Path=importDataSourcePath}" VerticalAlignment="Top" Width="258"/>

    </Grid>
</Window>
